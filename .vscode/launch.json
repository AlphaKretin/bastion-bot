	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Launch Program",
			"program": "${workspaceFolder}/bastion.js",
			"outFiles": ["${workspaceFolder}/**/*.js"],
			"runtimeArgs": ["--trace-warnings", "--enable-source-maps"],
			"preLaunchTask": "npm: build",
			"outputCapture": "std",
			"internalConsoleOptions":"openOnSessionStart"
		}
	]
}
